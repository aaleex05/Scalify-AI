---
import GitHub from "../components/icons/GitHub.astro";
import Email from "../components/icons/Email.astro";
import Button from "../components/Button.astro";
---

<div id="contact" class="flex flex-col xl:flex-row sm:pt-20 mt-10">
    <div
        class="xl:bg-gradient-to-r bg-gradient-to-b from-[#0b0c2a] to-[#2b2668] xl:border-t xl:border-b border-t border-[#464272] pt-20 md:px-20 px-10 md:py-50 sm:px-10"
    >
        <h1 class="pb-2 text-xl font-semibold text-[#5a5ab1]">Contact</h1>
        <h1 class="text-4xl md:text-5xl font-semibold">Get in touch</h1>
        <p class="text-lg md:text-xl text-white/60 pt-5 text-pretty">
            Lorem ipsum dolor sit, amet consectetur adipisicing elit. Neque ea
            ullam dolor delectus reiciendis, autem consectetur alias
            consequatur, maiores harum ab laborum dolore sit animi dolores
            deleniti sed quia velit.
        </p>
        <div class="flex items-center gap-x-2 pt-5 text-[#a6a6c1]">
            <GitHub />
            <span>aaleex05</span>
        </div>
        <div class="flex items-center gap-x-2 pt-3 text-[#a6a6c1]">
            <Email />
            <span>alexapsa2007@gmail.com</span>
        </div>
    </div>

    <div
        class="xl:bg-gradient-to-l bg-gradient-to-t from-[#0b0c2a] to-[#2b2668] xl:border-t border-b border-[#464272] w-full"
    >
        <form
            action="https://formsubmit.co/alexapsa2007@gmail.com"
            method="POST"
            class="px-8 md:px-20 py-12 md:py-5 2xl:py-50 xl:py-30"
        >
            <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
                <div class="2xl:col-span-1 col-span-2">
                    <label for="name" class="font-semibold">First name</label>
                    <input
                        type="text"
                        id="fname"
                        name="fname"
                        required
                        class="border-2 bg-white/5 border-gray-400 rounded-md p-2 w-full outline-0 focus:border-2 focus:border-[#544ca8]"
                    />
                </div>
                <div class="2xl:col-span-1 col-span-2">
                    <label for="name" class="font-semibold">Last name</label>
                    <input
                        type="text"
                        id="lname"
                        name="lname"
                        required
                        class="border-2 border-gray-400 bg-white/5 rounded-md p-2 w-full outline-0 focus:border-2 focus:border-[#544ca8]"
                    />
                </div>
                <div class="col-span-2">
                    <label for="email" class="font-semibold">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="border-2 border-gray-400 bg-white/5 rounded-md p-2 w-full outline-0 focus:border-2 focus:border-[#544ca8]"
                    />
                </div>
                <div class="col-span-2">
                    <label for="message" class="font-semibold">Message</label>
                    <textarea
                        id="message"
                        name="message"
                        rows="4"
                        required
                        class="border-2 border-gray-400 bg-white/5 rounded-md p-2 w-full outline-0 focus:border-2 focus:border-[#544ca8]"
                    ></textarea>
                </div>
                <div class="col-span-2 flex justify-end">
                    <Button type="submit">Enviar</Button>
                </div>
            </div>
        </form>
    </div>
</div>
