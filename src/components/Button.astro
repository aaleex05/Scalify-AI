---
const { lgpx = "lg:px-6" } = Astro.props;
const { lgpy = "lg:py-1" } = Astro.props;
const { px = "px-5" } = Astro.props;
const { py = "py-1" } = Astro.props;
---

<button class={`bg-gradient-to-r from-[#0b0c2a] to-[#2b2478] ${lgpx} ${lgpy} ${px} ${py} cursor-pointer rounded-full border border-[#2b2478] hover:transform hover:scale-105 hover:translate-y-0.5 transition-all duration-300 ease-in-out text-white hover:border-[#4840a8]`}>
    <slot />
</button>
